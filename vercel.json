{
  "version": 2,
  "builds": [
    {
      "src": "api/translate.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/fetch-url.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/translate",
      "dest": "/api/translate.js"
    },
    {
      "src": "/api/fetch-url",
      "dest": "/api/fetch-url.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 